<!--데이터 수정을 위한 테이블 구조 구현 -->
<h1>{{  title   }}</h1>

<table>
    <tr>
        <td>Fname</td>
        <td>Minit</td>
        <td>Lname</td>
        <td>Ssn</td>
        <td>Bdate</td>
        <td>Address</td>
        <td>Sex</td>
        <td>Salary</td>
        <td>Super_ssn</td>
        <td>Dno</td>
    </tr>
    {{#each emp_res}}
        <form method="post"> 
        <!--action='/update/employee'> -->
    <!-- post로 넘겨주기 위해 주석처리 -->
    
        <tr>
            <td>{{Fname}}</td>
            <td>{{Minit}}</td>
            <td>{{Lname}}</td>
            <td>{{Ssn}}</td>
            <td>{{Bdate}}</td>
            <td>{{Address}}</td>
            <td>{{Sex}}</td>
                <!-- input tag를 사용하여 입력 가능한 형태로 변경함(다른방법도 검색하면 있음)  -->
                <!-- placeholder는 입력하는 공간에 미리 적혀있는 예시값? -->
                <!-- input을 주었기 때문에 입력가능-->
            <td><input type="text" name="salary" placeholder={{Salary}}></td>
            <td>{{Super_ssn}}</td>
            <td>{{Dno}}</td>
                <!-- formaction 속성을 활용하여 입력한 값을 넘겨줌 -->
                <!--formaction은 update.js에서의 router.post에서 데이터 처리 -->
            <td><input type="submit" value="수정" formaction="/update/employee"></td>
        </tr>
    </form>
    {{/each}}
</table>