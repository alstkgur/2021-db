 <!-- 이건 updatedepartment.hbs 이름바꾸고 내용 바꾼거임  -->
<h1>{{ title }}</h1>
<table>
  <tr>
    <td>airport_code</td>
    <td>name</td>
    <td>city</td>
    <td>state</td>
  </tr>
  {{#each airport}}
    <form method="post">
      <tr>
        <td>{{airport_code}}</td>
        <td>{{name}}</td>  
        <td>{{city}}</td>  
        <td>{{state}}</td>  
        <td style="border: none; margin-left: 10px;">
          <button  
            style="margin-left: 10px;"
            type="submit" 
            name="delBtn"
            value= "{{Name}}"
            formaction="/delete"
            >
          삭제
          </button>
        </td>
      </tr>    
    </form>
  {{/each}}
</table>